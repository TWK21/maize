<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpFragment"
    android:orientation="vertical"
    android:paddingTop="55dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Pick the entrance you are entering through."
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Add shopping items in 'Shop' by searching for an item and clicking."
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Follow the quickest and simplest direction to the items."
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. When you arrive at an item's location, press 'pick up' to head to the next location."
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. You can view items in your list and total price of picked up items at 'Receipt'"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. You can delete items in 'Receipt' by clicking."
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7. Complete shopping efficiently and enjoy the time you saved!"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>
